@{
    ViewData["Title"] = "Queues | Admin";
    Layout = "_Layout";

    var Patients = ViewData["Patients"] as IEnumerable<RudyHealthCare.Models.Patients.PatientsModel>;

    var index = 1;
}

@* @model RudyHealthCare.Blueprints.PatientsHelperBlueprint *@

<section class="wrapper">
    <aside id="sidebar" class="rounded-end-4">
        <div class="d-flex">
            <button class="toggle-btn" type="button">
                <i class="lni lni-grid-alt"></i>
            </button>

            <div class="sidebar-logo">
                <a href="">Gidion Farma</a>
            </div>
        </div>

        <ul class="sidebar-nav">
            <li class="sidebar-item">
                <a asp-controller="Admin" asp-action="Dashboard" class="sidebar-link">
                    <i class="lni lni-dashboard"></i>
                    <span>Dashboard</span>
                </a>
            </li>
            <li class="sidebar-item">
                <a asp-controller="Admin" asp-action="Queues" class="sidebar-link">
                    <i class="lni lni-layers"></i>
                    <span>Antrian</span>
                </a>
            </li>
            <li class="sidebar-item">
                <a asp-controller="Admin" asp-action="Profile" class="sidebar-link">
                    <i class="lni lni-smile"></i>
                    <span>Profile</span>
                </a>
            </li>
        </ul>

        <div class="sidebar-footer">
            <a asp-controller="" asp-action="" class="sidebar-link">
                <i class="lni lni-exit"></i>
                <span>Logout</span>
            </a>
        </div>
    </aside>

    <div class="main p-3">
        <div class="text-start mx-5 my-5">
            <h5 class="mb-0 fs-5 fw-bold main-font-color">Proses Antrian</h5>

            <p class="lead fs-6 my-1">Daftar antrian pasien yang ingin konsultasi hari ini.</p>

            <div class="input-group">
                <form action="post" class="form-outline d-flex gap-3 my-3" data-mdb-input-init>
                    <input type="search" id="search" name="search" class="form-control custom-input rounded-1 shadow-sm"
                        placeholder="Cari data pasien" required />

                    <button type="submit" class="btn btn-primary main-background-color shadow-lg">
                        <i class="fas fa-search"></i>
                    </button>
                </form>
            </div>

            <div class="my-3">
                @if (Patients != null && Patients.Any())
                {
                    <table class="table table-striped my-3">
                        <thead>
                            <tr>
                                <th scope="col">No</th>
                                <th scope="col">Antrian</th>
                                <th scope="col">Nama</th>
                                <th scope="col">Kontak</th>
                                <th scope="col">Tanggal Registrasi</th>
                                <th scope="col">Status</th>
                                <th scope="col">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Patients)
                            {
                                <tr>
                                    <th scope="row">@index</th>
                                    <td>@Html.DisplayFor(modelItem => item.QueueNumber)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Name)</td>
                                    <td>@Html.DisplayFor(modelItem => item.WhatsAppNumber)</td>
                                    <td>@item.DateOfRegistration</td>
                                    <td>
                                        <span class="badge 
                                            @if (@item.QueueStatus == "Antri") {
                                            <text>bg-warning</text>
                                            }
                                            else if (@item.QueueStatus == "Diterima") {
                                            <text>green-background-color</text>
                                            }
                                            else if (@item.QueueStatus == "Ditolak") {
                                            <text>pink-background-color</text>
                                            }">
                                            @Html.DisplayFor(modelItem => item.QueueStatus)
                                        </span>
                                    </td>
                                    <td>
                                        <a href="@Url.Action("MedicalRecords", "Admin", new {@item.PatientId})"
                                            class="text-decoration-none"><i class="fa-solid fa-pen-to-square fs-4"></i></a>

                                        <button type="button" class="btn text-danger border-0" data-bs-toggle="modal"
                                            data-bs-target="#DeleteConfirmation">
                                            <i class="fa-solid fa-trash fs-4"></i>
                                        </button>
                                    </td>
                                </tr>

                                index++;
                            }
                        </tbody>

                        <div class="modal fade" id="DeleteConfirmation" data-bs-backdrop="static" data-bs-keyboard="false"
                            tabindex="-1" aria-labelledby="DeleteConfirmationLabel" aria-hidden="true">
                            <div class="modal-dialog">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h1 class="modal-title fs-5" id="DeleteConfirmationLabel">Warning!</h1>

                                        <button type="button" class="btn-close" data-bs-dismiss="modal"
                                            aria-label="Close"></button>
                                    </div>
                                    <div class="modal-body">
                                        Apakah anda yakin ingin menghapus data ini?
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary"
                                            data-bs-dismiss="modal">Close</button>

                                        <button type="button" class="btn btn-danger">Yes</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </table>
                }
                else
                {
                    <table class="table table-striped my-3">
                        <thead>
                            <tr>
                                <th scope="col">No</th>
                                <th scope="col">Antrian</th>
                                <th scope="col">Nama</th>
                                <th scope="col">Kontak</th>
                                <th scope="col">Tanggal</th>
                                <th scope="col">Status</th>
                                <th scope="col">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td colspan="7" class="lead text-center fs-6">Data tidak ada, belum ada pasien yang
                                    mendaftar hari ini.</td>
                            </tr>
                        </tbody>
                    </table>
                }

                <div aria-label="Page navigation example" class="my-4">
                    <ul class="pagination justify-content-center">
                        <li class="page-item disabled">
                            <a class="page-link">Previous</a>
                        </li>
                        <li class="page-item active"><a class="page-link" href="#">1</a></li>
                        <li class="page-item "><a class="page-link" href="#">2</a></li>
                        <li class="page-item"><a class="page-link" href="#">3</a></li>
                        <li class="page-item">
                            <a class="page-link" href="#">Next</a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</section>