@{
    ViewData["Title"] = "Login | Admin";
    Layout = "_Layout";

    string? returnUrl = ViewContext.HttpContext.Request.Query["ReturnUrl"];
}

@model RudyHealthCare.Models.Admin.AdminModel

<header class=" header fixed-top">
    <nav class="navbar navbar-expand-lg bg-white shadow-lg">
        <div class="container">
            <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                <img src="/images/logo/LogoColor.svg" alt="Logo" width="" height=""
                    class="d-inline-block align-text-top">
            </a>
        </div>
    </nav>
</header>

<section class="login-form-section">
    <div class="container col-xl-12 col-xxl-12 px-0 py-0">
        <div class="row align-items-center g-lg-5">
            <div class="col-md-10 mx-auto col-lg-5">
                <form asp-controller="Account" asp-action="Login" method="post"
                    class="p-4 p-md-5 border-0 shadow-lg rounded-5 bg-transparent">
                    <div class="mb-5 d-flex justify-content-center">
                        <h1 class="display-6 fw-bold lh-1 main-font-color">Administrator</h1>
                    </div>

                    @* <div class="form-floating mb-3">
                    <input type="text" class="form-control shadow-lg rounded-4" id="username" name=""
                    placeholder="Username" required>
                    <label for="username">Username</label>
                    </div> *@

                    <input type="hidden" asp-for="ReturnUrl" value="@returnUrl" />

                    <div class="form-floating mb-3">
                        <input type="email" asp-for="Email" class="form-control shadow-lg rounded-4" placeholder="Email"
                            required>

                        <label asp-for="Email">Email</label>

                        <div class="col-12 col-md-10 d-flex justify-content-start">
                            <span asp-validation-for="Email" class="lead fw-normal text-danger fs-6"></span>
                        </div>
                    </div>

                    <div class="form-floating mb-3">
                        <input type="password" asp-for="Password" class="form-control shadow-lg rounded-4"
                            placeholder="Password" required>

                        <label asp-for="Password">Password</label>

                        <div class="col-12 col-md-10 d-flex justify-content-start">
                            <span asp-validation-for="Password" class="lead fw-normal text-danger fs-6"></span>
                        </div>
                    </div>

                    <div class="checkbox mb-3">
                        <label>
                            <input type="checkbox" asp-for="RememberMe">

                            <label asp-for="RememberMe" class="">Remember me</label>
                        </label>
                    </div>

                    <div class="col-12 col-md-10 d-flex justify-content-start align-items-start text-start">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    </div>

                    <button type="submit"
                        class="btn btn-lg btn-primary rounded-5 border-0 shadow-lg w-100 h-auto custom-gradient-btn text-white">Login</button>
                </form>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}